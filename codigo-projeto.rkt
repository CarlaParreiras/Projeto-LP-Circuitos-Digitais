; "Sonda" de wire: acompanhamento da mudança

(define (probe name wire)
  (add-action! wire
               (lambda ()        
                 (newline)
                 (display name)
                 (display " ")
                 (display (current-time the-agenda))
                 (display "  New-value = ")
                 (display (get-signal wire)))))

; Executor da agenda: realiza cada procedimento da agenda em sequência

(define (propagate)
  (if (empty-agenda? the-agenda)
      'done
      (let ((first-item (first-agenda-item the-agenda)))
        (first-item)
        (remove-first-agenda-item! the-agenda)
        (propagate))))


; Exemplo - CIRCUITO HALF-ADDER

(define (half-adder a b s c)
  (let ((d (make-wire)) (e (make-wire)))
    (or-gate a b d)
    (and-gate a b c)
    (inverter c e)
    (and-gate d e s)
    'ok))

; Definindo o circuito

(half-adder input-1 input-2 sum carry)

(define input-1 (make-wire))

(define input-2 (make-wire))

(define sum (make-wire))

(define carry (make-wire))

; Instanciando a agenda 

(define the-agenda (make-agenda))

(define inverter-delay 2)

(define and-gate-delay 3)

(define or-gate-delay 5)

; Tracking

(probe 'sum sum) ;Iniciam com time 0 e signal 0
(probe 'carry carry)
(set-signal! input-1 1) ;Modificamos o sistema e executamos a agenda
(propagate)